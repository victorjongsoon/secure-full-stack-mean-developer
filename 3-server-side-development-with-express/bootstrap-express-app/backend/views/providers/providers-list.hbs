<!-- Provider List Section -->
<section class="page-section" id="provider-list">
    <div class="container">
        <h2 class="text-center mt-0">At Your Service</h2>
        <hr class="divider my-4">
        
        <!-- Add Provider Button -->
        <div class="row my-4">
            <div class="col-sm-12 text-right">
                <a href="/providers/add-provider/" class="btn btn-primary btn-md">Add Provider</a>
            </div>
        </div>

        <!-- Provider List Table -->
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Position</th>
                        <th scope="col">Company</th>
                        <th scope="col">Actions</th>
                    </tr>
                <tbody>
                    {{#each providers}}
                    <tr>
                        <td scope="row">{{ id }}</td>
                        <td scope="row">{{ firstname }}</td>
                        <td scope="row">{{ lastname }}</td>
                        <td scope="row">{{ position }}</td>
                        <td scope="row">{{ company.company_name }}</td>
                        <td scope="row">
                            <a href="/providers/details/{{ id }}" class="btn btn-primary btn-sm">View</a>
                            <a href="/providers/edit/{{ id }}" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/providers/delete/{{ id }}" method="POST" style="display: inline-block;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                </thead>
            </table>
        </div>
    </div>
</section>